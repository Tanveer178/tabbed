<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.abiduzair.tabbed.EditStory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.33"
            android:src="@drawable/lionmouse"
            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="100dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="9.04"
            android:layout_height="wrap_content"
            android:text="The Lion and the Mouse"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Once when a lion, the king of the jungle, was asleep, a little mouse began running up and down on him. This soon awakened the lion, who placed his huge paw on the mouse, and opened his big jaws to swallow him."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PUSH"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
